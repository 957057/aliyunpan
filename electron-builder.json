{
  "appId": "com.alixby.app",
  "productName": "alixby",
  "copyright": "3.10.24",
  "asar": true,
  "compression": "store",
  "directories": {
    "output": "release"
  },
  "extraResources": [
    { "from": "./aria2c.exe", "to": "."},
    { "from": "./aria2c", "to": "."}
  ],
  "files": [
    "dist"
  ],
  "mac": {
    "artifactName": "${productName}v${version}-${arch}.${ext}",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "linux": {
    "category": "Utility",
    "artifactName": "${productName}v${version}-${arch}.${ext}",
    "target": [
      {
        "target": "AppImage",
        "arch": [ "x64" ]
      }
    ]
  },
  "win": {
    "icon": "./app.ico",
    "target": [
      {
        "target": "nsis",
        "arch": [ "x64" ]
      }
    ],
    "artifactName": "${productName}v${version}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}
